<%- include('adminLayouts/head')  %>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white me-2">
                  <i class="mdi mdi-home"></i>
                </span> <%= title %>
              </h3>
              <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">
                    <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                  </li>
                </ul>
              </nav>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <form action="/update/<%= user._id %>" method="post">
                        <table  class="table">
                            <thead>
                                <tr class="table-dark">
                                    <th><label for="name">Name:</label></th>
                                    <th><label for="email">Email:</label></th>
                                    <th><label for="password">Password:</label></th>
                                    <th><label for="role">Role:</label></th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="text" id="username" name="username" value="<%= user.username  %>" ></td>
                                    <td><input type="email" id="email" name="email" required value="<%= user.email  %>" readonly></td>
                                    <td><input type="password" id="password" name="password" required value="<%= user.password  %>"></td>
                                    <td>
                                        <select id="role" name="role">
                                            <option value="student" <%= user.role === 'student' ? 'selected' : '' %>>Student</option>
                                            <option value="coordinator" <%= user.role === 'coordinator' ? 'selected' : '' %>>Coordinator</option>
                                            <option value="manager" <%= user.role === 'manager' ? 'selected' : '' %>>Manager</option>
                                        </select>
                                        
                                    </td>
                                    <td colspan="2"><button type="submit">Update</button></td>
                                </tr>
                            </tbody>
                            
                        </table>
                    </form>
                </div>
                
                
                
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <% if (message) { %>
                        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                            <strong><%= message.message %></strong>
                        </div>
                    <% } %>
                    <div class="table-responsive justify-content-center" id="table">
                        <% if (users != '') { %>
                            <table id="mytable"  class="table table-stripped text-center my-3 justify-content-center">
                                <thead>
                                    <tr class="table-dark text-center">
                                        <th class="text-center">Id</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Role</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((row, index) => { %>
                                        <tr class="align-items-center">
                                            <td><%= index %></td>
                                            <td><%= row.username  %></td>
                                            <td><%= row.email %></td>
                                            <td><%= row.role  %></td>
                                            <td>
                                                <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                                <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1 class="text-center text-secondary mt-5">No Student Found In The Database!</h1>
                        <% } %>
                    </div>
                </div>
            </div>
            
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
              <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright Â© bootstrapdash.com 2021</span>
              <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
        <%- include('adminLayouts/foot')  %>